html 
    head 
        title='Productos listados en Pug'
        link(rel='stylesheet', href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
    body(class="bg-secondary bg-gradient bg-opacity-50 vh-100 d-flex flex-column", style="place-items: center")
        h1(class="text-center m-3")='Peliculas'
        div(class="d-flex flex-column", style="place-items: center") 
        each prod in result
            div(class=" d-flex m-1 p-2 justify-content-center w-50 bg-light border border-5 rounded", style="place-items: center") 
                div(class="d-flex flex-column mx-4 w-75") 
                    h5='Id: '+ prod.id 
                    h2='Peli: '+prod.title 
                    h4='Precio: '+prod.price 
                div(class="w-50 bg-light d-flex", style="place-content: center")
                    img.image(src=prod.thumbail, alt=prod.title, style="max-width: 13em; max-height: 13em; object-fit: contain")
        button 
            a(href='../')!='Volver a <b>carga de productos</b>' 